<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/login_scr_edtxt_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rec_edittxt_style"
        android:ems="10"
        android:hint="@string/login_scr_edtxt_email"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:textCursorDrawable="@null"
        android:textColorHint="#cccccc"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="5dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/login_scr_edtxt_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rec_edittxt_style"
        android:ems="10"
        android:hint="@string/login_scr_edtxt_password"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textCursorDrawable="@null"
        android:textColorHint="#cccccc"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp" />

    <Button
        android:id="@+id/login_scr_btn_login"
        style="@style/DefaultButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/button_background"
        android:padding="10dp"
        android:text="@string/login_scr_btn_login" />

    <TextView
        android:id="@+id/login_scr_txt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center"
        android:text="@string/login_scr_new_user"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#1304BA" />

</LinearLayout>